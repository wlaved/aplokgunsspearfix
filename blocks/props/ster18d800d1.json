{
  "format_version": "1.21.0",
  "minecraft:block": {
    "description": {
      "identifier": "trenbankai:ceiling_light",
      "menu_category": {
        "category": "construction"
      },
      "traits": {
        "minecraft:placement_position": {
          "enabled_states": ["minecraft:block_face"]
        }
      },
      "states": {
        "trenbankai:powering": [false, true]
      }
    },
    "components": {
      "minecraft:collision_box": {
        "origin": [-5, 3, 6],
        "size": [10, 10, 2]
      },
      "minecraft:selection_box": {
        "origin": [-5, 3, 6],
        "size": [10, 10, 2]
      },
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 1
      },
      "minecraft:display_name": "tile.ceiling_light.name",
      "minecraft:geometry": "geometry.ceiling_light",
      "minecraft:tick": {
        "looping": false,
        "interval_range": [0, 0]
      },
      "minecraft:custom_components": ["trenbankai:toggleable_light"],
      "minecraft:light_dampening": 0,
      "tag:metal": {}
    },
    "permutations": [
      {
        "condition": "q.block_state('minecraft:block_face') == 'down'",
        "components": {
          "minecraft:transformation": {
            "rotation": [-90, 0, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'up'",
        "components": {
          "minecraft:transformation": {
            "rotation": [90, 0, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'north'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 0, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'west'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 90, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'south'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 180, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'east'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, -90, 0]
          }
        }
      },
      {
        "condition": "q.block_state('trenbankai:powering')",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "ceiling_light_on",
              "render_method": "alpha_test"
            }
          },
          "minecraft:tick": {
            "interval_range": [5, 5],
            "looping": true
          },
          "minecraft:light_emission": 15
        }
      },
      {
        "condition": "!q.block_state('trenbankai:powering')",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "ceiling_light_off",
              "render_method": "alpha_test"
            }
          },
          "minecraft:light_emission": 0
        }
      }
    ]
  }
}
