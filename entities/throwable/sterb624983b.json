{
  "format_version": "1.17.10",
  "minecraft:entity": {
    "description": {
      "identifier": "trenbankai:mk2_grenade_entity",
      "runtime_identifier": "minecraft:snowball",
      "is_spawnable": false,
      "is_summonable": false
    },
    "component_groups": {
      "despawn": {
        "minecraft:instant_despawn": {}
      },
      "impact": {
        "minecraft:timer": {
          "time": 0.45,
          "looping": true,
          "time_down_event": {
            "event": "trenbankai:explode"
          }
        }
      },
      "explode": {
        "minecraft:area_attack": {
          "cause": "contact",
          "damage_per_tick": 16,
          "damage_range": 2.5,
          "entity_filter": {
            "none_of": [
              {
                "test": "is_family",
                "subject": "other",
                "value": "item"
              },
              {
                "test": "is_family",
                "subject": "other",
                "value": "inanimate"
              }
            ]
          }
        },
        "minecraft:explode": {
          "fuse_length": 0,
          "fuse_lit": true,
          "power": 2.5,
          "causes_fire": false,
          "fire_affected_by_griefing": true,
          "destroy_affected_by_griefing": true
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": ["projectile", "explosive", "grenade"]
      },
      "minecraft:collision_box": {
        "width": 0.25,
        "height": 0.25
      },
      "minecraft:tick_world": {
        "distance_to_players": 256,
        "never_despawn": false,
        "radius": 2
      },
      "minecraft:projectile": {
        "on_hit": {
          "definition_event": {
            "affect_projectile": true,
            "event_trigger": {
              "event": "trenbankai:impact"
            }
          },
          "stick_in_ground": {
            "shake_time": 0.1
          },
          "impact_damage": {
            "damage": 6,
            "knockback": false,
            "should_bounce": true,
            "semi_random_diff_damage": false
          }
        },
        "power": 1.075,
        "gravity": 0.06,
        "inertia": 1,
        "liquid_inertia": 0.65,
        "uncertainty_base": 0.4,
        "anchor": 1,
        "offset": [0, 0.15, 0],
        "stop_on_hurt": true,
        "reflect_on_hurt": true,
        "should_bounce": true
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:physics": {}
    },
    "events": {
      "trenbankai:despawn": {
        "add": {
          "component_groups": ["despawn"]
        }
      },
      "trenbankai:impact": {
        "sequence": [
          {
            "add": {
              "component_groups": ["impact"]
            }
          },
          {
            "queue_command": {
              "command": [
                "playsound throwable.grenade.drop @a[r=20] ~~~ 1 1 0.01"
              ]
            }
          }
        ]
      },
      "trenbankai:explode": {
        "sequence": [
          {
            "add": {
              "component_groups": ["despawn"]
            }
          },
          {
            "add": {
              "component_groups": ["explode"]
            }
          },
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_underground",
                  "value": true
                },
                {
                  "test": "is_underwater",
                  "value": false
                }
              ]
            },
            "queue_command": {
              "command": ["tag @s add underground"]
            }
          },
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_underground",
                  "value": false
                }
              ]
            },
            "queue_command": {
              "command": ["tag @s remove underground"]
            }
          },
          {
            "queue_command": {
              "command": ["function effect/explosion"]
            }
          },
          {
            "queue_command": {
              "command": [
                "event entity @e[family=explosive, r=5] trenbankai:explode"
              ]
            }
          }
        ]
      }
    }
  }
}
