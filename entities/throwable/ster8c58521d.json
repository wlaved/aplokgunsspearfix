{
  "format_version": "1.17.10",
  "minecraft:entity": {
    "description": {
      "identifier": "trenbankai:l83a1_grenade_entity",
      "runtime_identifier": "minecraft:snowball",
      "is_spawnable": false,
      "is_summonable": false,
      "scripts": {
        "animate": [
          {
            "sfx": "q.variant == 1"
          }
        ]
      },
      "animations": {
        "sfx": "animation.thrown_l83a1_grenade.sfx"
      }
    },
    "component_groups": {
      "despawn": {
        "minecraft:instant_despawn": {}
      },
      "timer": {
        "minecraft:timer": {
          "looping": false,
          "time": 1.5,
          "time_down_event": {
            "event": "trenbankai:smoke"
          }
        }
      },
      "cloud": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:ageable": {
          "duration": 40,
          "grow_up": {
            "event": "trenbankai:despawn"
          }
        },
        "minecraft:timer": {
          "looping": true,
          "time": 0,
          "time_down_event": {
            "event": "trenbankai:cloud"
          }
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": ["projectile", "smoke", "grenade"]
      },
      "minecraft:collision_box": {
        "width": 0.25,
        "height": 0.25
      },
      "minecraft:tick_world": {
        "distance_to_players": 256,
        "never_despawn": false,
        "radius": 2
      },
      "minecraft:projectile": {
        "on_hit": {
          "definition_event": {
            "affect_projectile": true,
            "event_trigger": {
              "event": "trenbankai:impact"
            }
          },
          "stick_in_ground": {
            "shake_time": 0.1
          },
          "impact_damage": {
            "damage": 6,
            "knockback": false,
            "should_bounce": true,
            "semi_random_diff_damage": false
          }
        },
        "power": 1.075,
        "gravity": 0.06,
        "inertia": 1,
        "liquid_inertia": 0.65,
        "uncertainty_base": 0.4,
        "anchor": 1,
        "offset": [0, 0.15, 0],
        "stop_on_hurt": true,
        "reflect_on_hurt": true,
        "should_bounce": true
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:physics": {}
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": ["timer"]
        }
      },
      "trenbankai:despawn": {
        "add": {
          "component_groups": ["despawn"]
        }
      },
      "trenbankai:impact": {
        "queue_command": {
          "command": ["playsound throwable.grenade.drop @a[r=20] ~~~ 1 1 0.01"]
        }
      },
      "trenbankai:timer": {
        "add": {
          "component_groups": ["timer"]
        }
      },
      "trenbankai:smoke": {
        "remove": {
          "component_groups": ["timer"]
        },
        "add": {
          "component_groups": ["cloud"]
        },
        "trigger": "trenbankai:detonade"
      },
      "trenbankai:cloud": {
        "queue_command": {
          "command": [
            "particle trenbankai:smoke_grenade ^^^",
            "particle trenbankai:smoke_grenade ^^^"
          ]
        }
      },
      "trenbankai:detonade": {
        "sequence": [
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 0
            },
            "queue_command": {
              "command": [
                "playsound throwable.smoke_grenade.detonate @a[r=20] ^^^ 100 1 0.01"
              ]
            }
          }
        ]
      }
    }
  }
}
