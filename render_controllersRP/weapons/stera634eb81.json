    "controller.render.laser": {
      "arrays": {
        "geometries": {
          "Array.geo": ["Geometry.laser"]
        },
        "textures": {
          "Array.skins": ["Texture.laser_green", "Texture.laser_red"]
        }
      },
      "geometry": "array.geo[0]",
