        {
          "reticle": "material.glow"
        }
      ],
      "textures": ["texture.eotech_sight"],
      "part_visibility": [
        {
          "*": "q.is_sneaking"
        }
      ],
      "ignore_lighting": true,
      "light_color_multiplier": 3
