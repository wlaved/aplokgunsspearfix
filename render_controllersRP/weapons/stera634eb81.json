{
  "format_version": "1.10.0",
  "render_controllers": {
    "controller.render.acog_sight": {
      "geometry": "geometry.acog_sight",
      "materials": [
        {
          "*": "material.default"
        },
        {
          "glass": "material.transparent"
        },
        {
          "lens": "material.transparent"
        },
        {
          "reticle": "material.glow"
        }
      ],
      "textures": ["texture.acog_sight"],
      "part_visibility": [
        {
          "lens": "q.is_sneaking"
        },
        {
          "reticle": "q.is_sneaking"
        },
        {
          "colored_glass": "v.is_first_person ? !q.is_sneaking : (1.0)"
        }
      ]
    },
    "controller.render.eotech_sight": {
      "geometry": "geometry.eotech_sight",
