    // Standby animations
    "controller.animation.player.weapons_standby_fpp": {
      "initial_state": "inactive",
      "states": {
        "inactive": {
          "transitions": [
            {
              "standby": "v.weapons && v.standby"
            }
          ],
          "blend_transition": 0.35
        },
        "standby": {
          "animations": ["weapons_standby_fpp"],
          "transitions": [
            {
              "inactive": "!v.weapons || !v.standby"
            }
          ],
          "blend_transition": 0.025
        }
      }
    },
    // Movement animations
    "controller.animation.player.weapons_movement_fpp": {
      "initial_state": "inactive",
      "states": {
        "inactive": {
          "transitions": [
            {
              "movement": "v.weapons && q.is_moving && q.is_on_ground && !q.is_sneaking && !v.running"
            }
          ],
          "blend_transition": 0.25
        },
        "movement": {
          "transitions": [
            {
              "inactive": "!v.weapons || !q.is_moving || !q.is_on_ground || q.is_sneaking || v.running"
            }
          ],
          "animations": ["weapons_movement_fpp", "ak12_fpp_walk"],
          "blend_transition": 0.25
        }
      }
    },
    // Wall detection animations
    "controller.animation.player.weapons_wall_detect_fpp": {
      "initial_state": "inactive",
      "states": {
        "inactive": {
          "transitions": [
            {
              "wall": "v.weapons && v.wall_detect"
            }
          ],
          "blend_transition": 0.17
        },
        "wall": {
          "transitions": [
            {
              "inactive": "!v.weapons || !v.wall_detect"
            }
          ],
          "animations": ["weapons_wall_detect_fpp"],
          "blend_transition": 0.2
        }
      }
    },
    // General third-person weapon animations
    "controller.animation.player.weapons_general_tpp": {
      "initial_state": "inactive",
      "states": {
        "inactive": {
          "transitions": [
            {
              "hold": "v.weapons && v.draw"
            }
          ],
          "blend_transition": 0.2
        },
        "hold": {
          "animations": [
            {
              "weapons_tpp_hold_0": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_heavy') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_hold_1": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_light') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_hold_2": "q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            }
          ],
          "transitions": [
            {
              "inactive": "!v.weapons || !v.draw"
            },
            {
              "ads": "q.is_sneaking"
            },
            {
              "standby": "v.standby"
            },
            {
              "run": "v.running && !q.is_sneaking && !q.main_hand_item_use_duration && !v.reloading"
            }
          ],
          "blend_transition": 0.2
        },
        "ads": {
          "animations": [
            {
              "weapons_tpp_hold_0": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_heavy') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_hold_1": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_light') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_hold_2": "q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_ads_0": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_heavy') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_ads_1": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_light') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_ads_2": "q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            }
          ],
          "transitions": [
            {
              "inactive": "!v.weapons || !v.draw"
            },
            {
              "hold": "!q.is_sneaking"
            },
            {
              "standby": "v.standby"
            },
            {
              "run": "v.running"
            }
          ],
          "blend_transition": 0.2
        },
        "standby": {
          "animations": [
            {
              "weapons_tpp_standby_0": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_heavy') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_standby_1": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_light') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_standby_2": "q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "sneaking": "q.is_sneaking && !q.is_sleeping"
            }
          ],
          "transitions": [
            {
              "inactive": "!v.weapons || !v.draw"
            },
            {
              "hold": "!v.standby"
            }
          ],
          "blend_transition": 0.2
        },
        "run": {
          "animations": [
            {
              "weapons_tpp_run_0": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_heavy') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_run_1": "q.equipped_item_all_tags('slot.weapon.mainhand', 'is_light') && !q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            },
            {
              "weapons_tpp_run_2": "q.equipped_item_all_tags('slot.weapon.mainhand', 'set_pose_0')"
            }
          ],
          "transitions": [
            {
              "inactive": "!v.weapons || !v.running || !v.draw"
            }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
