{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.player.nvg": {
      "initial_state": "inactive",
      "states": {
        "inactive": {
          "transitions": [
            {
              "execute": "q.equipped_item_all_tags('slot.armor.head', 'has_nvg') && q.is_alive"
            }
          ]
        },
        "execute": {
          "on_entry": ["/playsound wearable.nvg.toggle @a[r=10] ~~~ 1 1 0.01"],
          "on_exit": [
            "/playsound wearable.nvg.toggleoff @a[r=10] ~~~ 1 1 0.01"
          ],
          "transitions": [
            {
              "inactive": "!q.equipped_item_all_tags('slot.armor.head', 'has_nvg') || !q.is_alive"
            }
          ]
        }
      }
    }
  }
}
