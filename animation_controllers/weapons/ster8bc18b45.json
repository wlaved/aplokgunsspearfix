// full-auto
{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.player.glock18": {
      "initial_state": "inactive",
      "states": {
        "inactive": {
          "on_entry": ["@s trenbankai:remove_reload"],
          "transitions": [
            {
              "fire": "q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') && q.scoreboard('glock18') >= 1 && v.fire && v.draw"
            },
            {
              "pre_reload": "q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') && q.scoreboard('glock18') <= 0 && v.reload"
            },
            {
              "pre_reload": "q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') && q.scoreboard('glock18') <= 16 && v.reload && q.is_sneaking && v.attack_time"
            }
          ]
        },
        "fire": {
          "on_entry": ["/function weapons/fire/glock18"],
          "on_exit": ["v.weapon_fire = q.life_time;"],
          "transitions": [
            {
              "firing": "(1.0)"
            }
          ]
        },
        "firing": {
          "on_entry": ["v.weapon_fire = q.life_time;"],
          "transitions": [
            {
              "post_fire": "!q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') || q.scoreboard('glock18') <= 0 || !v.fire || !v.draw"
            },
            { "fire": "(q.life_time - v.weapon_fire) >= 0.0" }
          ]
        },
        "post_fire": {
          "on_entry": [
            "/execute as @s[tag=!underground, tag=!silencer] run playsound effect.weapon.dist.short @a[rm=0.1, r=200] ^^^1.5 100 1 0.01"
          ],
          "transitions": [
            {
              "inactive": "(1.0)"
            }
          ]
        },
        "pre_reload": {
          "on_entry": [
            "/execute as @s[hasitem={item=trenbankai:glock_mag, quantity=1..}, scores={glock18=..0}] run event entity @s trenbankai:add_reload_empty",
            "/execute as @s[hasitem={item=trenbankai:glock_mag, quantity=1..}, scores={glock18=1..}] run event entity @s trenbankai:add_reload"
          ],
          "transitions": [
            {
              "inactive": "!q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') || !q.property('trenbankai:reload') || !q.is_alive"
            },
            {
              "reload_empty": "q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') && q.property('trenbankai:reload') == 1 && v.reloading"
            },
            {
              "reload": "q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') && q.property('trenbankai:reload') == 2 && v.reloading"
            }
          ]
        },
        "reload_empty": {
          "animations": ["glock_reload_empty"],
          "transitions": [
            {
              "inactive": "!q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') || !v.reloading"
            },
            {
              "reloaded": "q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') && q.all_animations_finished && q.is_alive"
            }
          ]
        },
        "reload": {
          "animations": ["glock_reload"],
          "transitions": [
            {
              "inactive": "!q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') || !v.reloading"
            },
            {
              "reloaded": "q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') && q.all_animations_finished && q.is_alive"
            }
          ]
        },
        "reloaded": {
          "on_entry": [
            "/execute as @s[hasitem={item=trenbankai:glock18, location=slot.weapon.mainhand}] run function weapons/reload/glock18"
          ],
          "transitions": [
            {
              "inactive": "1"
            },
            {
              "inactive": "!q.is_item_name_any('slot.weapon.mainhand', 'trenbankai:glock18') || !v.draw"
            }
          ]
        }
      }
    }
  }
}
