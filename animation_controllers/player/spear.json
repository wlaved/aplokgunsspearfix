{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.player.spear_logic": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "holding": "(query.has_item_tag('minecraft:is_spear') || query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:spear') || query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:trident')) && !query.is_using_item"
            },
            {
              "charging": "(query.has_item_tag('minecraft:is_spear') || query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:spear') || query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:trident')) && query.is_using_item"
            }
          ]
        },
        "holding": {
          "animations": [
            "brandish_spear"
          ],
          "transitions": [
            {
              "default": "!query.has_item_tag('minecraft:is_spear') && !query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:spear') && !query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:trident')"
            },
            {
              "charging": "query.is_using_item"
            }
          ]
        },
        "charging": {
          "animations": [
            "charging_spear",
            { "first_person_spear_throw": "variable.is_first_person" },
            { "third_person_spear_throw": "!variable.is_first_person" }
          ],
          "transitions": [
            {
              "default": "!query.has_item_tag('minecraft:is_spear') && !query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:spear') && !query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:trident')"
            },
            {
              "holding": "!query.is_using_item"
            }
          ]
        }
      }
    }
  }
}
